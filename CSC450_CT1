// Description : Create a simple application display information of a fictional person
//============================================================================

#include <iostream>

// Standard namespace declaration
using namespace std;

// Main Function
int main() {

// Define variables for the information
    string firstName = "Elf";
    string lastName = "Santa";
    string address = "1224 Christmas Street";
    string city = "North Pole";
    string zipCode = "99705";

// Print out the information
    cout<<"First Name:"<<firstName<< endl;
    cout<<"Last Name:"<<lastName<< endl;
    cout<<"Address:"<<address<< endl;
    cout<<"City:"<<city<< endl;
    cout<<"Zip Code:"<<zipCode<< endl;
    return 0;
}



//============================================================================
// Name        : CSC450_CT1_mod1-1.cpp
