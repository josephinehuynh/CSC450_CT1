//CORRECTED VERSION

#include <iostream>
// Standard namespace declaration
using namespace std;
// Main Function
int main()
{
    // Standard Output Statement
    cout<<"Welcome to this C++ Program"<<endl;
    cout<<"I have corrected all errors for this program."<<endl; // Missing ""

    // Wait For Output Screen
    cin.get();

    // Main Function return Statement
    return 0;
}






